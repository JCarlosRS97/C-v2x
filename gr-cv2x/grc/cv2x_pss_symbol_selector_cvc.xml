<?xml version="1.0"?>
<block>
  <name>pss_symbol_selector_cvc</name>
  <key>cv2x_pss_symbol_selector_cvc</key>
  <category>[cv2x]</category>
  <import>import cv2x</import>
  <make>cv2x.pss_symbol_selector_cvc($fft, $syncPeriod, 0)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
       <param>
         <name>FFT length</name>
         <key>fft</key>
         <type>int</type>
       </param>
       <param>
         <name>Sync Period</name>
         <key>syncPeriod</key>
         <type>int</type>
       </param>

       <!-- Make one 'sink' node per input. Sub-nodes:
            * name (an identifier for the GUI)
            * type
            * vlen
            * optional (set to 1 for optional inputs) -->
       <sink>
         <name>in</name>
         <type>complex</type>
       </sink>

       <sink>
         <name>lock</name>
         <type>message</type>
       </sink>

       <sink>
         <name>sync_frame</name>
         <type>message</type>
       </sink>

       <!-- Make one 'source' node per output. Sub-nodes:
            * name (an identifier for the GUI)
            * type
            * vlen
            * optional (set to 1 for optional inputs) -->
       <source>
         <name>out</name>
         <type>complex</type>
         <vlen>64</vlen>
       </source>
</block>
